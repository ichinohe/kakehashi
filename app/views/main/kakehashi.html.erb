<section id="kakehashiapp">
	<header id="header"></header>

	<section id="main">
		<div class="off-canvas-wrap">
			<div class="inner-wrap">

				<div class="fixed">
					<nav class="tab-bar">
						<section class="left-small">
							<h1 id="service-name">KAKEHASHI</h1>
						</section>

						<section class="middle tab-bar-section">
							<nav class="top-bar" data-topbar>
								<section class="top-bar-section">
									<ul class="right">
										<li class='has-dropdown'>
											<a><i class="fa fa-bar-chart-o fa-lg"></i></a>
											<ul class="dropdown">
												<li id="bubble_btn"><a>Bubble View</a></li>
												<li id="table_btn"><a>Table View</a></li>
											</ul>
										</li>
										<li class='has-dropdown'>
											<a><i class="fa fa-calendar fa-lg"></i></a>
											<ul class="dropdown">
												<li><a>All</a></li>
												<li><a>Today</a></li>
												<li><a>This Month</a></li>
											</ul>
										</li>
									</ul>
								</section>
							</nav>
						</section>

						<section class="right-small">
							<a class="right-off-canvas-toggle"><i class="fa fa-heart fa-lg"></i></a>
						</section>
					</nav><!-- tab-bar end -->
				</div>

				<aside class="right-off-canvas-menu">
					<ul class="off-canvas-list">
						<li><label><i class="fa fa-glass fa-2x"></i> LIQUOR</label></li>
						<li><a href="#sake">Sake</a></li>
						<li><a href="#shotyu">Shotyu</a></li>
						<li><a href="#wine">Wine</a></li>
						<li><label><i class="fa fa-desktop fa-2x"></i> ANIME</label></li>
						<li><a href="#2014-1st">2014 1-3</a></li>
						<li><a href="#2014-2nd">2014 4-6</a></li>
					</ul>
				</aside>

				<!-- Main Section -->
				<div id="main-section">
					<div class="row">
						<section id="trend-header"></section>
					</div>
					<!-- Main Contents -->
					<div class="row">
						<section class="main-section" id="main-contents"></section>
					</div>
				</div>

				<a class="exit-off-canvas"></a>

			</div>
		</div><!-- off-canvas-wrap end -->

	</section><!-- section main end -->

	<footer id="footer"></footer>

</section>

<%= javascript_tag do %>
$(function() {
	App.start();

	$('#bubble_btn').click(function() {
		var controller = new App.KAKEHASHI.Controller();
		controller.showTarget('bubble');
	});

	$('#table_btn').click(function() {
		var controller = new App.KAKEHASHI.Controller();
		controller.showTarget('table');
	});

});

<% end %>